<script>
    pUrl = document.getElementById("pUrl");
    pUrl.innerHTML = window.location.href;
    function openNav() {
        document.getElementById("mySidenav").style.width = "400px";
    }

    function closeNav() {
        document.getElementById("mySidenav").style.width = "0";
    }
</script>