<h1 class="text-center">Contact Us</h1>
<form class="col-md-6 offset-md-3" method="post">
    {{#each errorMessages}}
        <div class="alert alert-danger">
            <p>{{this.msg}}</p>
        </div>
    {{/each}}

    <div class="form-group">
        <label>Name</label>
        <input id="name" type="text" name="name" class="form-control" aria-describedby="nameHelp"
            placeholder="Your Name" value={{name}}>
        <small id="emailHelp" class="form-text text-muted">We will get back to you with this name</small>
    </div>
    <div class="form-group">
        <label>Email address</label>
        <input id="email" type="email" name="email" class="form-control" aria-describedby="emailHelp"
            placeholder="Your Email" value={{email}}>
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
        <label>Message</label>
        <textarea id="message" class="form-control" name="message" rows="4"
            placeholder="Your Message">{{message}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>